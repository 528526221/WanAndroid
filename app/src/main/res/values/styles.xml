<resources>

    <!-- Base application theme. -->
    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <style name="AppTheme.Translucent" parent="Base.AppTheme">

    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="bottom_bar_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/bottom_bar_text_selector</item>
    </style>

    <style name="menu_window_style">
        <item name="android:windowEnterAnimation">@anim/anim_menu_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_menu_exit</item>
    </style>

</resources>
